{% extends '/admin/admin.html.twig' %}

{% block title %} Proizvodi {% endblock %}

{% block body %}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-danger">Add new product</h6>
    </div>
    <div class="card-body">
        <form action="{{ path('admin_article_store') }}" method="POST" enctype="multipart/form-data">

        <div class="form-group">
            <label for="title">Title:</label>
            <input id="title" class="form-control" type="text"  
            name="title" value="">
        </div>

        <div class="form-group">
            <label for="description">Description:</label>
            <textarea class="form-control" id="description" type="text" 
            name="description"></textarea>
        </div>

        <div class="form-group">
            <label for="extra_description">Extra description:</label>
            <textarea class="form-control" id="description" id="extra_description" type="text" 
            name="extra_description"></textarea>
        </div>

        <div class="form-group">
            <label for="characteristics">Characteristics:</label>
            <textarea class="form-control" id="characteristics" type="text"
             name="characteristics"></textarea>
        </div>

        <div class="form-group">
            <label for="price">Price:</label>
            <input id="price" class="form-control" type="number"
             name="price" value="">
        </div>
        
        <div class="form-group">
            <label for="promotion">Promotion:</label>
            <select id="promotion" class="form-control" name="promotion">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>
        </div>

        <div class="form-group">
            <label>Thumbnail:</label>
            <input id="title" class="form-control-file" type="file"  name="thumbnail">  
        </div>
        <div><input type="submit" class="btn btn-danger" value="Create"></div>
     </form>
    </div>
</div>
{% endblock %}