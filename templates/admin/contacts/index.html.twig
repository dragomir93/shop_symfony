{% extends '/admin/admin.html.twig' %}

{% block title %} Kontaktiraj nas {% endblock %}

{% block body %}
 <!-- Page Heading -->
 <h1 class="h3 mb-2 text-gray-800">Kontaktiraj nas</h1>
 <!-- DataTales Example -->
 <div class="card shadow mb-4">
     <div class="card-body">
         <div class="table-responsive">
             <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                 <thead>
                     <tr>
                         <th>ID</th>
                         <th>Ime</th>
                         <th>Email</th>
                         <th>Telefon</th>
                         <th>Poruka</th>
                         <th>Izmeni/Obri≈°i</th>
                     </tr>
                 </thead>
                 <tbody>
                     {% for contact in contacts %}
                     <tr>
                         <td>{{ contact.id }}</td>
                         <td>{{ contact.name }}</td>
                         <td>{{ contact.email }}</td>
                         <td>{{ contact.phone }}</td>
                         <td>{{ contact.message }}</td>
                         <td> <a href="{{ path('admin_contacts_edit',{'id':contact.id}) }}"><i class="fas fa-edit fa-sm fa-fw mr-2" style="color:#36b9cc;"></i></a>
                            <form class="d-inline" action="{{ path('admin_contacts_delete',{'id':contact.id}) }}" method="POST">
                                <button type="submit"  class="btn"><i class="fas fa-trash fa-sm fa-fw mr-2" style="color:#36b9cc;"></i></button>
                            </form>
                         </td>
                     </tr>
                    {% endfor %}
                    
                 </tbody>
             </table>
         </div>
     </div>
 </div>
{% endblock %}