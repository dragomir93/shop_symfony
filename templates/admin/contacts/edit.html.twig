{% extends '/admin/admin.html.twig' %}

{% block title %} Izmeni kontakt {% endblock %}

{% block body %}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-info">Edit contact</h6>
    </div>
    <div class="card-body">
        <form action="{{ path('admin_contacts_update',{ 'id':contacts.id }) }}" method="POST" enctype="multipart/form-data">

        <div class="form-group">
            <label for="name">Name:</label>
            <input id="name" class="form-control" type="text"  
            name="name" value="{{ contacts.name }}" required>
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            <input id="email" class="form-control" type="email"  
            name="email" value="{{ contacts.email }}" required>
        </div>

        <div class="form-group">
            <label for="phone">Phone:</label>
            <input class="form-control" id="phone"  type="text" 
            name="phone" value="{{ contacts.phone }}" required>
        </div>

        <div class="form-group">
           <label for="email">Naslov:</label>
            <input id="email" class="form-control" type="text"  
            name="subject" value="{{ contacts.subject }}" required>
        </div>

        <div class="form-group">
            <label for="message">Message:</label>
            <textarea rows="8" class="form-control" id="message" type="text"
             name="message" required>{{ contacts.message }} </textarea>
        </div>

        <div><input type="submit" class="btn btn-info" value="Edit"></div>
     </form>
    </div>
</div>
{% endblock %}