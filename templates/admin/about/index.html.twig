{% extends '/admin/admin.html.twig' %}

{% block title %}Admin Panel | O nama {% endblock %}

{% block body %}
 <!-- Page Heading -->
 <h1 class="h3 mb-2 text-gray-800">About us</h1>
 <!-- DataTales Example -->
 <div class="card shadow mb-4">
     <div class="card-body">
         {% if about_us is empty %}
         <a href="{{ path('about_create') }}" class="btn btn-primary m-2">New About page</a>
         {% else %}
         <div class="table-responsive">
             <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                 <thead>
                     <tr>
                         <th>ID</th>
                         <th>Title</th>
                         <th class="text-center">Content</th>
                         <th>Edit/Delete</th>
                     </tr>
                 </thead>
                 <tbody>
                     <tr>
                         <td>{{ about_us.id }}</td>
                         <td>{{ about_us.title }}</td>
                         <td>{{ about_us.content }}</td>
                         <td class="text-center"> <a href="{{ path('about_edit',{'id':about_us.id}) }}"><i class="fas fa-edit fa-sm fa-fw mr-2"></i></a>
                            <form class="d-inline" action="{{ path('about_delete',{'id':about_us.id}) }}" method="POST" id="delete-form">
                                <button type="submit"  class="btn"><i class="fas fa-trash fa-sm fa-fw mr-2" style="color: #4e73df;"></i></button>
                            </form>
                         </td>
                     </tr>
                 </tbody>
             </table>
         </div>
         {% endif %}
     </div>
 </div>
{% endblock %}